  <body>
    
    <!--Navigation Bar-->
    <nav class="navbar sticky-top navbar-light bg-secondary">
      <div id="col1" class="col">
        <a class="navbar-brand text-light" href="/">Games Wishlist</a> 
        
        <a class="text-dark" data-toggle="collapse" href="#collapseExample">
          Restrictions
        </a>
