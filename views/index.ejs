<% include ./partials/header %>

<div class="container">

<!-- Wishlist populated from database. -->
  <% wishlist.forEach(function(wishlist){ %>
    <div class="list-group-item list-group-item-action list-group-item-light">
      <a class="text-muted" href=<%= wishlist.gbLink %>>
        <strong><%= wishlist.name %></strong> - <%= wishlist.deck %>
      </a>
      
      <form action="/wishlist/<%= wishlist._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger" name ="removeGame">Remove</button>
      </form>
      
    </div>
  <% }) %>

</div>

<% include ./partials/footer %>